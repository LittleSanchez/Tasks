<Window x:Class="PhoneList.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneList"
        mc:Ignorable="d"
        Title="ConnectionWindow" Height="200" Width="400">
    <StackPanel TextBlock.FontSize="18" TextBlock.TextAlignment="Center">
        
        <TextBlock Text="IP Address" Margin="5 5 5 0" />
        <TextBox x:Name="tbAddress" Margin="5 5 5 0" />
        <TextBlock Text="Port" Margin="5 5 5 0" />
        <TextBox x:Name="tbPort" Margin="5 5 5 0" />
        <Button IsDefault="True" Content="Connect" Width="150" Margin="10" Click="Button_Click"/>
    </StackPanel>
</Window>
